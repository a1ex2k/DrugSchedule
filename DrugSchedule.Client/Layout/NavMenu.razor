@using Microsoft.AspNetCore.Components.Authorization;

<div class="nav-items">
    <AuthorizeView Context="authContext">
    <Authorized>
            <NavLink ActiveClass="current" href="/" class="nav-item animate" Match="NavLinkMatch.All">
                <i class="icon fa-solid fa-house"></i>
                <div class="text">Home</div>
            </NavLink>
            <NavLink ActiveClass="current" href="/user" class="nav-item animate" Match="NavLinkMatch.All">
                <i class="icon fa-solid fa-circle-user"></i>
                <div class="text">User</div>
            </NavLink>
        </Authorized>
        <NotAuthorized>
            <NavLink ActiveClass="current" href="/auth" class="nav-item animate" Match="NavLinkMatch.All">
                <i class="icon fa-solid fa-key"></i>
                <div class="text">Auth</div>
            </NavLink>
        </NotAuthorized>  
    </AuthorizeView>
</div>