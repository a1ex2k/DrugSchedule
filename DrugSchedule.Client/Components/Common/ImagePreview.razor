@typeparam TImageModel

<div class="card bg-secondary" style="@($"width: {PreviewSize}; height: {PreviewSize}")">
    <img src="@GetThumbnailUrl()" class="card-img-top bg-secondary" alt="@GetAltText()">
    @if (AllowDelete && OnDelete != null)
    {
        <div class="card-body d-flex justify-content-between">
            <CustomButton Color=Color.Danger Clicked="@(async() => await OnDelete(ImageModel))" Icon="fa-trash-can"></CustomButton>
        </div>
    }
</div>