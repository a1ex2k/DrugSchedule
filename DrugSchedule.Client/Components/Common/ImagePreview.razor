@typeparam TImageModel

<div class="card overflow-hidden" style="@($"min-width: {PreviewSize}; min-height: {PreviewSize}")">
    @if (ImageIsSet)
    {
        <img style="@($"width: {PreviewSize}; height: {PreviewSize}")"
             src="@GetThumbnailUrl()" class="card-img-top bg-light" alt="@GetAltText()">
    }

    @if (AllowDelete && OnDelete != null)
    {
        <div class="card-body d-flex justify-content-between">
            <CustomButton Color=Color.Danger Clicked="@(async() => await OnDelete(ImageModel))" Icon="fa-trash-can"></CustomButton>
        </div>
    }
</div>