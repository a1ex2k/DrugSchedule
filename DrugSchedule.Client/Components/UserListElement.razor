@using DrugSchedule.Api.Shared.Dtos

<div class="card flex-row">
    <ImagePreview TImageModel="string"
                  ImageModel="PublicUser.ThumbnailUrl"
                  ThumbnailUrl="@(x => x)"
                  PreviewSize="64px">
    </ImagePreview>

    <div class="card-body d-flex">
        @(PublicUser.RealName != null)
        {
        <span>@PublicUser.RealName</span>
        }
        <span>@@ @PublicUser.Username</span>
    </div>

    @if (Selectable)
    {
        <CustomButton Text="@SelectButtonText" Class="d-block" Icon="fa-check" Clicked="SelectAsync" />
    }
</div>
