@using DrugSchedule.Api.Shared.Dtos

<div class="card list-element flex-row">
    <ImagePreview TImageModel="PublicUserDto"
                  ImageModel="PublicUser"
                  ThumbnailUrl="@(x => x?.ThumbnailUrl)"
                  PreviewSize="64px">
    </ImagePreview>

    <div class="card-body d-flex">
        @if(PublicUser.RealName != null)
        {
            <span>@PublicUser.RealName</span>
        }
        <span>@@@PublicUser.Username</span>
    </div>

    @if (Selectable)
    {
        <CustomButton Text="@SelectButtonText" Class="d-block" Icon="fa-check" Clicked="SelectAsync" Outline />
    }
</div>
